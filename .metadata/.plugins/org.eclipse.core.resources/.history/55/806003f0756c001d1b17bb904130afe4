	<persistence-unit name="ontoone">
		<provider>
				org.hibernate.jpa.HibernatePersistenceProvider		
		</provider>
	
	<properties>
		<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
		
		<property name="javax.persistence.jdbcurl" 
			value="jdbc:mysql://localhost:3306/weje2?CreateDatabaseIfNotExist=true"/>
		
		<property name="javax.peristence.jdbc.user" value="root"/>
		<property name="java.peristence.jdbc.password" value="tiger"/>
		
		<property name="hibernate.hbm2ddl.auto" value="update"/>
		<property name="hibernate.show_sql" value="true"/>
		<property name="hibernate.dialect" value="org.hibernate.dialect.MYSQL8Dialect.class"/>
	</properties>
		
	</persistence-unit>  
	       
              
         
</persistence>